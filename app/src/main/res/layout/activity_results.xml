<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D7FCDF"
    tools:context=".ResultsActivity">

    <TextView
        android:id="@+id/final_results"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/winner"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:text="adsfasa"
        android:layout_alignParentRight="true"
        android:textColor="#022661"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/winner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="adsfasa"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:textColor="#F50202"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textSize="35dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/winner"
        android:orientation="vertical">

        <Button
            android:id="@+id/playAgain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="#A00909"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/white"
            android:text="Play Again"
            android:textSize="30dp" />


    </RelativeLayout>


</RelativeLayout>